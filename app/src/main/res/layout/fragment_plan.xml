<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.plan.PlanFragment">

    <RelativeLayout
        android:id="@+id/relAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/dp16"
        android:paddingEnd="@dimen/dp16"
        android:paddingStart="@dimen/dp16"
        android:paddingBottom="@dimen/dp8"
        >

        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txtDateSort"
            android:layout_alignBottom="@id/txtDateSort"
            android:layout_toStartOf="@id/txtDateSort"
            android:fontFamily="@font/gtwalsheimpromedium"
            android:gravity="center_vertical"
            android:text="@string/my_plans"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/txtDateSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_date_filter"
            android:drawablePadding="5dp"
            android:fontFamily="@font/gtwalsheimpromedium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="@string/today"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:drawableRightCompat="@drawable/icon_dropdown" />

    </RelativeLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relAppName" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relAppName"
        android:background="@drawable/background_tab"
        android:backgroundTint="@color/colorPrimaryVariant"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/green"
        app:tabIndicatorFullWidth="false"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>