<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp18"
    android:paddingTop="@dimen/dp18"
    android:paddingEnd="@dimen/dp18"
    android:paddingBottom="@dimen/dp8">

    <TextView
        android:id="@+id/txt_total_due_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_due_amount"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_total_due"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp8"
        android:text="@string/dash"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_1"
        android:layout_width="@dimen/dp6"
        android:layout_height="@dimen/dp1"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginEnd="@dimen/dp12"
        android:background="@color/text_black"
        app:layout_constraintEnd_toStartOf="@+id/txt_total_due"
        app:layout_constraintTop_toBottomOf="@+id/txt_total_due" />

    <TextView
        android:id="@+id/txt_collectable_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp4"
        android:text="@string/collected_amount"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_1" />

    <TextView
        android:id="@+id/txt_collectable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginEnd="@dimen/dp8"
        android:text="@string/dash"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_1" />

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginTop="@dimen/dp4"
        android:background="@color/quantum_grey400"
        app:layout_constraintTop_toBottomOf="@+id/txt_collectable_title" />

    <TextView
        android:id="@+id/txt_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:text="@string/collectable_amount"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_2" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginEnd="@dimen/dp8"
        android:text="@string/dash"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        app:layout_constraintTop_toBottomOf="@+id/txt_result" />

</androidx.constraintlayout.widget.ConstraintLayout>
