<!--        android:layout_below="@+id/repossession_map_custom_toolbar"-->
<!--        android:name="com.google.android.gms.maps.SupportMapFragment"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDropOffSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp32"
        app:cornerRadius="@dimen/dp32"
        android:paddingVertical="@dimen/dp16"
        android:fontFamily="@font/gtwalsheimpromedium"
        android:text="@string/DropOffSet"
        android:textColor="@color/white" />

</RelativeLayout>