                        android:id="@+id/txtNewMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gtwalsheimproregular"
                        android:text="@string/alternate_mobile"
                        android:textColor="@color/text_black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtNewMobileValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gtwalsheimpromedium"
                        android:text="@string/dash"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/additionalLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp12"
                    android:layout_marginEnd="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp12"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/additionalDetailTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="@dimen/dp8"
                        android:paddingBottom="@dimen/dp8"
                        android:text="@string/additional_details"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp18"
                        app:drawableEndCompat="@drawable/ic_round_arrow_drop_down"
                        app:drawableTint="@color/quantum_grey600" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/additionalInfoRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnCheckIn"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_button_rectangle"
        android:fontFamily="@font/gtwalsheimpromedium"
        android:text="@string/Check_In"
        android:textAllCaps="true"
        android:textColor="@color/white" />


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

