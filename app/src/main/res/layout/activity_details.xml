                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/gtwalsheimpromedium"
                            android:text="@string/dash"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />
